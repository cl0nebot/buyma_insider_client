<div class="section">
  <div class="container">
    <div class="columns">
      <div class="column">

        <div class="field is-horizontal">
          <div class="field-label">
            <label class="label">Username</label>
          </div>
          <div class="field-body">
            <div class="field is-grouped">
              <div class="control is-expanded has-icon">
                <input class="input is-medium" type="email" placeholder="Username">
                <span class="icon is-small">
                  <i class="fa fa-id-badge"></i>
                </span>
              </div>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label">
            <label class="label">Email</label>
          </div>
          <div class="field-body">
            <div class="field is-grouped">
              <div class="control is-expanded has-icon">
                <input class="input is-medium" type="email" placeholder="Email">
                <span class="icon is-small">
                  <i class="fa fa-envelope"></i>
                </span>
              </div>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label">
            <label class="label">Password</label>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control is-expanded has-icon">
                <input class="input is-medium" type="password" placeholder="Password">
                <span class="icon is-small">
                  <i class="fa fa-lock"></i>
                </span>
              </div>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label">
            <label class="label">Confirm Password</label>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control is-expanded has-icon">
                <input class="input is-medium" type="password" placeholder="Confirm Password">
                <span class="icon is-small">
                  <i class="fa fa-lock"></i>
                </span>
              </div>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label">
            <!--Empty spacing-->
          </div>

          <div class="field-body">
            <div class="field is-grouped">
              <div class="control">
                <button {{action 'signup'}} class="button is-success">Register</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="column is-half">
      </div>
    </div>
  </div>
</div>

