<section class="hero is-medium is-bold is-dark is-hidden-mobile">
  <div class="hero-body">
    <div class="columns">
      <div class="column is-10 is-offset-1">

        <div class="field has-addons">
          <!--<span class="select is-large">-->
            {{!--{{ui.form.ember-select content=merchants-->
                                   <!--optionValuePath='id'-->
                                   <!--optionLabelPath='name'}}--}}
          <!--</span>-->
          <div class="control is-expanded">
            {{input list="articles" class="input is-large"
                    type="text"
                    placeholder="Item description or sku..."
                    enter='_searchArticles'}}

            <datalist id="articles">
              {{#each searchArticles as |articleAutocomplete|}}
                <option value="{{{articleAutocomplete.autocomplete}}}">
                  {{articleAutocomplete.id}}
                </option>
              {{/each}}
            </datalist>
          </div>
          <div class="control">
            <a class="button is-large is-primary">
              <span class="icon is-medium">{{fa-icon 'search'}}</span>
              <span>Find</span>
            </a>
          </div>
        </div>

        <h6 class="subtitle is-6">
          <ul>
            <li>Hint: Auto-complete is available</li>
            <li>Hint: 'zar:&lt;query&gt;' will limit search to Zara</li>
          </ul>
        </h6>

      </div>
    </div>
  </div>
</section>
<section class="section">
  <div class="container">
    {{#each (chunk 3 merchants) as |merchants_chunk|}}
      <div class="columns">
        {{#each merchants_chunk as |merchant|}}
          <div class="column is-one-third">
            <div class="card">
              <div class="card-content has-text-centered">
                {{#link-to 'merchant' merchant.id class='content'}}
                  <h1 class="title">{{capitalize merchant.name}} [{{merchant.id}}]</h1>
                {{/link-to}}
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    {{/each}}
  </div>
</section>

