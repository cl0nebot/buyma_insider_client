{{#if showHiddenLoginForm}}
  {{partial 'partials/hidden/login-form'}}
{{/if}}

{{#ui/b/resp/-hero}}
  Login
{{/ui/b/resp/-hero}}

<div class="section">
  <div class="container">
    <div class="columns">
      <div class="column">

        <div class="field is-horizontal">
          <div class="field-label">
            <label class="label">Username</label>
          </div>
          <div class="field-body">
            <div class="field is-grouped">
              <div class="control is-expanded has-icon">
                {{input value=login class='input is-medium' type='text' placeholder='Username'}}
                <span class="icon is-small">
                  <i class="fa fa-id-badge"></i>
                </span>
              </div>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label">
            <label class="label">Password</label>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control is-expanded has-icon">
                {{input value=password class='input is-medium' type='password' placeholder='Password'}}
                <span class="icon is-small">
                  <i class="fa fa-lock"></i>
                </span>
              </div>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label">
            <!--Empty spacing-->
          </div>

          <div class="field-body">
            <div class="field is-grouped">
              <div class="control">
                {{#ui/form/-async-button class='button is-primary is-medium'
                                         action=(action 'login' login password)}}
                                           Login
                                         {{/ui/form/-async-button}}
              </div>
              <div class="control">
                {{#link-to 'signup' class='button is-link'}}Register{{/link-to}}
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="column is-half">
      </div>
    </div>
  </div>
</div>
