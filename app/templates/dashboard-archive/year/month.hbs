<div class="columns">
  <div class="column">
    <div class="field is-horizontal">
      <div class="field-label">
        <label class="label">Day</label>
      </div>
      <div class="field-body">
        <div class="field">
          {{#each allDays as |day|}}
            {{#link-to 'dashboard-archive.year.month.day.day-index' year month day
                       current-when='dashboard-archive.year.month.day'
                       class='button is-small is-light mb-1'
                       activeClass='is-active is-primary'}}{{day}}{{/link-to}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>

</div>
{{outlet}}
