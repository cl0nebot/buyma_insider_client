<div class="columns">
  <div class="column one-half"></div>
  <div class="column one-half">
    <p class="title is-4 has-text-right">
      Archive
    </p>
  </div>
</div>

<hr>

<div class="columns">
  <div class="column">
    <div class="field is-horizontal">
      <div class="field-label">
        <label class="label">Year</label>
      </div>
      <div class="field-body">
        <div class="field">
          {{#each allYears as |year|}}
            {{#link-to 'index.dashboard-archive.year.year-index' year
                       class='button is-small is-light'
                       activeClass='is-active is-primary'}}{{year}}{{/link-to}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="columns">
  <div class="column">
    <div class="field is-horizontal">
      <div class="field-label">
        <label class="label">Month</label>
      </div>
      <div class="field-body">
        <div class="field">
          {{#each allMonths as |month|}}
            {{#link-to 'index.dashboard-archive.year.month.month-index' year month
                       class='button is-small is-light mb-1'
                       activeClass='is-active is-primary'}}{{month}}{{/link-to}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>

{{outlet}}

<hr>

<div class="columns">
  <div class="column is-12">
    <p class="title is-6 has-text-right">
      {{moment-format currentDate 'MMM-D-YYYY'}}
    </p>
  </div>
</div>
