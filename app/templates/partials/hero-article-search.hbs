<section class="hero is-small is-dark is-hidden-mobile">
  <div class="hero-body">
    <div class="container">
      <div class="columns">
        <div class="column">

          <div class="field">
            <!--<span class="select is-large">-->
            {{!--{{ui.form.ember-select content=merchants-->
                                   <!--optionValuePath='id'-->
                                   <!--optionLabelPath='name'}}--}}
            <!--</span>-->
            <div class="control is-expanded">
              {{input list="articles" class="input is-medium"
                      type="text"
                      value=inputSearchArticleQuery
                      placeholder="Item description or sku..."
                      enter='_searchArticles'}}

              <datalist id="articles">
                {{#each searchArticles as |articleAutocomplete|}}
                  <option value="{{{articleAutocomplete.autocomplete}}}">
                    {{articleAutocomplete.id}}
                  </option>
                {{/each}}
              </datalist>
            </div>
            <div class="control">
              {{#ui.form.-async-button class='button is-medium is-primary'
                                       action=(action '_searchArticles')}}
                <span class="icon">{{fa-icon 'search'}}</span>
                <span>Find</span>
              {{/ui.form.-async-button}}
            </div>
          </div>

          <h6 class="subtitle is-6">
            <ul>
              <li>Hint: Auto-complete is available (soon...)</li>
              <li>Hint: 'zar:&lt;query&gt;' will limit search to Zara (soon...)</li>
            </ul>
          </h6>

        </div>
      </div>
    </div>
  </div>
</section>