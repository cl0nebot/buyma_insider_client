<div class="card is-fullwidth">
  <header class="card-header">
    <p class="card-header-title">
    <h3 class="title is-3">{{capitalize merchant.name}}</h3>
    </p>
  </header>
  <div class="card-content">
    <nav class="level is-mobile">
      <!--<div class="level-item has-text-centered">-->
        <!--<p class="heading">New Articles</p>-->
        <!--<p class="title">{{merchant.newArticlesCount}}</p>-->
      <!--</div>-->
      <div class="level-item has-text-centered">
        <p class="heading">Total Articles</p>
        <p class="title">{{merchant.totalArticlesCount}}</p>
      </div>
      <div class="level-item has-text-centered">
        <p class="heading">Last Sync</p>
        <p class="title">
          {{#if merchant.lastSyncAt}}
            {{capitalize (moment-from-now merchant.lastSyncAt)}}
          {{else}}
            Never
          {{/if}}
        </p>
      </div>
    </nav>
  </div>
  <footer class="card-footer">
    {{#link-to 'merchant.history' merchant.id class='card-footer-item'}}
      Update Histories
    {{/link-to}}
    {{#link-to 'merchant.edit' merchant.id class='card-footer-item'}}
      Edit
    {{/link-to}}
  </footer>
</div>
