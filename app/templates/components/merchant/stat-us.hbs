<div class="card is-fullwidth">
  <header class="card-header">
    <p class="card-header-title">
    <h3 class="title is-3">{{capitalize metadatum.name}}</h3>
    </p>
  </header>
  <div class="card-content">
    <nav class="level is-mobile">
      <div class="level-item has-text-centered">
        <p class="heading">New Articles</p>
        <p class="title">{{metadatum.newArticlesCount}}</p>
      </div>
      <div class="level-item has-text-centered">
        <p class="heading">Total Articles</p>
        <p class="title">{{metadatum.totalArticlesCount}}</p>
      </div>
      <div class="level-item has-text-centered">
        <p class="heading">Last Sync</p>
        <p class="title">
          {{#if metadatum.lastSync}}
            {{capitalize (moment-from-now metadatum.lastSync)}}
          {{else}}
            Never
          {{/if}}
        </p>
      </div>
    </nav>
  </div>
  <footer class="card-footer">
    {{#link-to 'merchant.history' metadatum.id class='card-footer-item'}}
      Update Histories
    {{/link-to}}
    <a class="card-footer-item">All Articles</a>
    <a class="card-footer-item">View</a>
    <a class="card-footer-item">View</a>
  </footer>
</div>
