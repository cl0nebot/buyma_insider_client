<a class="button is-outlined is-primary pagination-previous {{if isFirstDisabled 'is-disabled'}}"
   href="{{previousUrl}}" {{action 'previous'}}>
  <span class="icon">
    {{ui/-icon 'navigate_before'}}
  </span>
  <span>{{{pagerPrevious}}}</span>
</a>
<a class="button is-outlined is-primary pagination-next {{if isLastDisabled 'is-disabled'}}"
   href="{{nextUrl}}" {{action 'next'}}>
  <span>{{{pagerNext}}}</span>
  <span class="icon">
    {{ui/-icon 'navigate_next'}}
  </span>
</a>
<ul class="pagination-list is-fullwidth">
  {{#each pages key='@index' as |page|}}
    {{ui/-pager-item disabled=disabled page=page
                selected=this.current seperator=seperator
                urlTemplate=urlTemplate pageSet='pageChanged'}}
  {{/each}}
</ul>
