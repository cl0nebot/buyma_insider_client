<header class="card-header" {{action (toggle 'displayCardContent' this)}}>
  <p class="card-header-title">
    {{yield}}
  </p>
  <a class="card-header-icon">
    <span class="icon">
      {{#if displayCardContent}}
        {{fa-icon 'angle-down'}}
      {{else}}
        {{fa-icon 'plus-circle'}}
      {{/if}}
    </span>
  </a>
</header>
<div class="card-content is-small {{if (not displayCardContent) 'is-hidden'}}">
  {{yield to='inverse'}}
</div>
{{#each actionItems as |actionItem|}}
  <div class="card-footer {{if (not displayCardContent) 'is-hidden'}}">
    {{#if actionItem}}
      <a class="card-footer-item" {{action actionItem.actionItemName}}>
        {{actionItem.actionName}}
      </a>
    {{/if}}
  </div>
{{/each}}
